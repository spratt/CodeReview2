{
  "rules": {
    "code": {
      "$key": {
  			".read": true,
        ".write": "!data.exists()",
    		".validate": "newData.hasChildren(['text', 'lang'])"
      }
    },"comment": {
      "$codeKey": {
        ".read": true,
        "$key": {
        	".write": "!data.exists()",
    			".validate": "newData.hasChildren(['name', 'text', 'start', 'end'])"
        }
      }
    }
  }
}
